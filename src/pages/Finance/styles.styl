.pageName {
  padding-left: 16px
}
.defiProducts {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  padding: 0px;
  @media screen and (max-width: 800px) {
    gap: 16px;
  }
  .defiProduct {
    /* Auto Layout */
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 26px;
    /* bridge/neutral/white */
    background: #FFFFFF;
    box-shadow: 0px 6px 14px -6px rgba(24, 39, 75, 0.08), 0px 10px 32px -4px rgba(24, 39, 75, 0.04);
    border-radius: 4px;
    flex: 1;
    order: 0;
    align-self: stretch;
    flex-grow: 1;
    margin: 0px 16px;
    transition: ease 2s;
    @media screen and (max-width: 800px) {
      flex: 1 1 100%;
    }
    &:hover {
      background: #E1FEF2;  
    }
    .defiTitle {
      color: #30303D;  
    }
    .defiDescription {
      color: #748695;
    }
  }
}