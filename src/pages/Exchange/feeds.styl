.walletBalances {
  width: 300px;
  min-width 300px
  margin-left 40px

  .container {
    background white
    padding 10px 30px
    border-radius 5px
    border 1px solid #dedede
  }
}

.stepsContainer {
  .stepRow {
    margin-bottom 16px

    &.active {
      color rgb(23 189 224);
    }

    &.completed {
      color #495057
    }

    &.failed {
      color #c90000
    }

    color #49505750
    // color #dedede
  }
}

.walletBalancesRow {
  flex-direction column
  justify-content space-between
  align-items start
  padding 10px 0px

  &.first {
    padding-bottom 0px
  }

  .priceColumn {
    flex-direction column
    align-items flex-start
    justify-content center
    margin-right 24px

    .smallText {
      font-size 14px
      color rgb(173, 173, 173)
      line-height 14px
    }
  }

  &.underline {
    border-bottom  1px solid #dedede
  }

  button {
    width 100px
  }
}

.imgToken {
  margin-right 6px
  margin-bottom 2px

  max-height 30px
}

.step {
  margin-top 26px
  display block
}

.stepNumber {
    border 3px solid #dedede
    border-radius 50%
    font-size 22px
    width 42px
    height 42px
    padding 18px 0
    display inline-block
    text-align center
    line-height 0
}

.text {
  display block
  margin-top 10px
  word-break break-all
}

.stepNumberActive {
    border-color #06A863
    color #06A863
}

.progress {
    position relative
    width 100%
    background-color #dedede
}

.progress, .bar {
    border-radius 8px
    min-height 16px
}

.progress .bar {
    position absolute
    top 0
    left 0
    background-color #06A863
    transition width 0.5s
}
